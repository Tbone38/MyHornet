<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listRow"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:layout_weight="1"
    tools:context=".DisplayResultsActivity" >
	<RelativeLayout
	    android:id="@+id/textwrapper"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:gravity="center" >
	    <TextView
	        android:id="@+id/bookingstart"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:padding="5dp"
	        android:textSize="20sp"
	        android:gravity="center_vertical"
	        />
    </RelativeLayout>
    <TextView 
        android:id="@+id/bookingname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_toRightOf="@id/textwrapper"
        android:textSize="20sp"/>
    
    <TextView
        android:id="@+id/bookingtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textwrapper"
        android:layout_below="@id/bookingname"
        android:padding="3dp"
        android:textSize="16sp" />
    
    <TextView 
        android:id="@+id/bookingend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textwrapper"
        android:layout_below="@id/bookingtype"
        android:padding="3dp"
        android:textSize="16sp" />    
</RelativeLayout>
