<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent">

<RelativeLayout android:id="@+id/bookingspage" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BookingPage"
    android:descendantFocusability="beforeDescendants"
	android:focusableInTouchMode="true" >
	<RelativeLayout 
	    android:id="@+id/imagewrapper"
	    android:layout_height="120dp"
	    android:layout_width="match_parent"
	    android:background="@color/gym"
	    android:layout_marginBottom="5dp"
	    android:layout_gravity="center" >

	    <ImageView
	        android:id="@+id/image"
	        android:layout_width="120sp"
	        android:layout_height="120sp"
	        android:layout_alignParentTop="true"
	       
	        android:contentDescription="@string/image_description"
	        android:paddingLeft="5dp" />

     </RelativeLayout>
    <TextView
        android:id="@+id/bookingname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/imagewrapper"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />
    
    <TextView android:id="@+id/bookingmembership"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookingname"
        android:textSize="16sp"
        android:text="@string/bookingmembership"
        android:textColor="@color/black"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>
    <View android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/bookingmembership"
        android:background="@color/grey" />
    <TextView android:id="@+id/bookingtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:gravity="center"
        android:textSize="20sp"
        android:padding="5dp"/>
    <TextView android:id="@+id/bookingdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookingtime"
        android:textSize="16sp"
        android:padding="5dp"
        android:layout_margin="5dp"/>
     <TextView android:id="@+id/bookingresourcename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookingtime"
        android:layout_alignParentRight="true"
        android:textSize="16sp"
        android:padding="5dp"
        android:layout_margin="5dp" />
    <RelativeLayout
        android:id="@+id/bookingtyperow" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookingdate"
        android:layout_margin="5dp">
	    <TextView android:id="@+id/bookingtype"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="18sp"
	        android:text="@string/bookingtype"/>
	    <Spinner
        	android:id="@+id/bookingselect"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentRight="true"
	        android:textSize="18sp"
	        android:text="@string/bookingselect"
	        android:layout_marginRight="5dp"
	        android:padding="5dp" />
	</RelativeLayout>
    <EditText android:id="@+id/bookingnotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookingtyperow"
        android:textSize="16sp"
        android:minLines="2"
        android:inputType="textCapWords"
        android:padding="5dp"
        android:layout_margin="5dp"/>
	<View android:id="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/bookingnotes"
        android:background="@color/grey"/>
	<TextView android:id="@+id/bookingactions"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/line6"
	    android:textSize="20sp"
        android:textStyle="bold"
	    android:gravity="center"
	    android:text="@string/bookingaction"
	    android:textColor="@color/white"
	    android:background="@color/gym"
	    android:padding="5dp"
	    android:layout_margin="5dp" />
	<View android:id="@+id/line7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/bookingactions"
        android:background="@color/grey"/>
	<LinearLayout android:id="@+id/buttonrow1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/line7"
	    android:orientation="horizontal">
		<TextView android:id="@+id/bookingcheckin"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight=".5"
		    android:textSize="22sp"
		    android:text="@string/bookingcheckin"
		    android:padding="5dp"
		    android:layout_margin="5dp"
		    android:gravity="center" />
		<TextView android:id="@+id/bookingcancel"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight=".5"
		    android:textSize="22sp"
		    android:text="@string/bookingcancel"
		    android:padding="5dp"
		    android:layout_margin="5dp"
		    android:gravity="center" />
	</LinearLayout>
	<LinearLayout android:id="@+id/buttonrow2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/buttonrow1"
	    android:orientation="horizontal">
		<TextView android:id="@+id/bookingnoshow"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight=".5"
		    android:textSize="22sp"
		    android:text="@string/bookingnoshow"
		    android:padding="5dp"
		    android:layout_margin="5dp"
		    android:gravity="center" />
		<TextView android:id="@+id/bookingreschedule"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight=".5"
		    android:textSize="22sp"
		    android:text="@string/bookingreschedule"
		    android:padding="5dp"
		    android:layout_margin="5dp"
		    android:gravity="center" />
	</LinearLayout>
	<View android:id="@+id/line8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/buttonrow2"
        android:background="@color/grey"/>
	<TextView android:id="@+id/bookingcommunicate"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/line8"
    	android:textSize="20sp"
        android:textStyle="bold"
	    android:text="@string/bookingcommunicate"
	    android:textColor="@color/white"
	    android:background="@color/gym"
	    android:gravity="center"
	    android:padding="5dp"
	    android:layout_margin="5dp"/>
	<View android:id="@+id/line9"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/bookingcommunicate"
        android:background="@color/grey"/>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/line9"
	    android:orientation="horizontal">
		<TextView android:id="@+id/bookingsms"
		    android:layout_height="wrap_content"
		    android:layout_width="0dp" 
		    android:layout_weight=".50"
		    android:textSize="24sp"
		    android:text="@string/bookingsms"
		    android:padding="2dp"
		    android:layout_margin="5dp"
		    android:gravity="center" />
		<TextView android:id="@+id/bookingcall"
		    android:layout_height="wrap_content"
		    android:layout_width="0dp"
		    android:layout_weight=".50"
		    android:textSize="24sp"
		    android:text="@string/bookingcall"
		    android:padding="2dp"
		    android:layout_margin="5dp"
		    android:gravity="center" />
	</LinearLayout>
</RelativeLayout>
</ScrollView>