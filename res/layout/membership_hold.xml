<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content" >
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context=".MembershipHold" >
	
	 	<TextView
	 	    android:id="@+id/membername"
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	 	    android:textSize="25sp"
	 	    android:padding="5dp"
	 	    android:paddingBottom="2dp"
	 	    android:layout_margin="3dp" />
	 	<View
	 	    android:id="@+id/membernameline"
	 	    android:layout_width="match_parent"
	 	    android:layout_height="5dp"
	 	    android:layout_below="@id/membername"
	 	    android:background="@color/member_blue"
	 	    android:padding="3dp" />
	 	    
	 	<TextView 
	 	    android:id="@+id/membershipname"
	 	    android:layout_height="wrap_content"
	 	    android:layout_width="wrap_content"
	 	    android:layout_below="@id/membernameline"
	 	    android:gravity="center"
	 	    android:textSize="16sp"
	 	    android:padding="5dp"
	 	    android:layout_margin="3dp"/>
	 	
	 	<LinearLayout 
	 	    android:id="@+id/gifttimerow"
	 	    android:layout_height="wrap_content"
	 	    android:layout_width="match_parent"
	 	    android:layout_below="@id/membershipname"
	 	    android:gravity="center"
	 	    android:orientation="horizontal"
	 	    android:paddingLeft="5dp"
	 	    android:paddingRight="5dp"
	 	    android:paddingTop="5dp"
	 	    android:layout_margin="3dp" >
	 	    
		 	<TextView
		 	    android:id="@+id/gifttimeL"
		 	    android:layout_width="0dp"
		 	    android:layout_height="wrap_content"
		 	    android:layout_weight=".8"
		 	    android:gravity="center_vertical"
		 	    android:textSize="18sp"
		 	    android:text="@string/membership_gifttime" /> 	
		 	<ToggleButton 
		 	    android:id="@+id/gifttime"
		 	    android:layout_width="0dp"
		 	    android:layout_height="wrap_content"
		 	    android:layout_weight=".2"
		 	    android:textOn="@string/membership_gifttime_yes"
		 	    android:textOff="@string/membership_gifttime_no" />
		 	
	 	</LinearLayout>
	 	<TextView
	 	    android:id="@+id/gifttime_description"
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	 	    android:layout_below="@id/gifttimerow"
	 	    android:textSize="13sp"
	 	    android:text="@string/membership_gifttime_description"
	 	    android:paddingLeft="5dp"
	 	    android:paddingRight="5dp"
	 	    android:paddingBottom="5dp"
	 	    android:layout_margin="3dp" />
	 	<TextView 
	 	    android:id="@+id/startdateL"
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	 	    android:layout_below="@id/gifttime_description"
	 	    android:gravity="center"
	 	    android:textSize="16sp"
	 	    android:text="@string/membership_startdate"
	 	    android:padding="5dp"
	 	    android:layout_margin="3dp"/>
	 	
	 	<TextView 
	 	    android:id="@+id/startdate"
	 	    android:layout_width="match_parent"
	 	    android:layout_height="wrap_content"
	 	    android:layout_below="@id/startdateL"
	 	    android:gravity="center_vertical"
	 	    android:textSize="18sp"
	 	    android:text="@string/membership_default_startdate"
	 	    android:padding="5dp"
	 	    android:layout_margin="3dp"
	 	    android:background="@drawable/button" />
	 	
	 	<TextView
	 	    android:id="@+id/hold_durationL"
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	 	    android:layout_below="@id/startdate"
	 	    android:gravity="center"
	 	    android:textSize="16sp"
	 	    android:text="@string/membership_length"
	 	    android:padding="5dp" 
	 	    android:layout_margin="3dp"/>
	 	
	 	<Spinner 
	 	    android:id="@+id/hold_duration"
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	 	    android:layout_below="@id/hold_durationL"
	 	    android:padding="5dp" 
	 	    android:layout_margin="3dp"
	 	    android:entries="@array/membership_length_titles" />
	 	
	 	<TextView 
	 	    android:id="@+id/hold_reasonL"
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	 	    android:layout_below="@id/hold_duration"
	 	    android:gravity="center"
	 	    android:textSize="16sp"
	 	    android:text="@string/membership_reason"
	 	    android:padding="5dp" 
	 	    android:layout_margin="3dp"/>
	 	
	 	<EditText
	 	    android:id="@+id/hold_reason"
	 	    android:layout_width="match_parent"
	 	    android:layout_height="wrap_content"
	 	    android:layout_below="@id/hold_reasonL"
	 	    android:inputType="text"
	 	    android:padding="5dp"
	 	    android:layout_margin="3dp" />
	 	
	 	<LinearLayout
	 	    android:id="@+id/buttonrow"
	 	    android:layout_width="match_parent"
	 	    android:layout_height="wrap_content"
	 	    android:layout_below="@id/hold_reason"
	 	    android:orientation="horizontal" >
		 	<LinearLayout
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight=".45"
			    android:layout_marginRight="10dp"
		    	android:orientation="vertical">
		 	    <TextView
		 	        android:id="@+id/buttoncancel"
		 	        android:layout_width="match_parent"
		 	        android:layout_height="wrap_content"
		 	        android:gravity="center"
		 	        android:textSize="20sp"
		 	        android:text="@string/buttonCancel"
		 	        android:padding="5dp"
		 	    	android:background="@drawable/button_large_cancel" />
		 	    <View
			        android:layout_width="match_parent"
				    android:layout_height="2dp"
				    android:paddingLeft="5dp"
			    	android:paddingRight="5dp"
				    android:background="@color/button_underline_red" />
			</LinearLayout>
			<LinearLayout
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight=".45"
			    android:layout_marginRight="10dp"
		    	android:orientation="vertical">
		 	    <TextView
		 	        android:id="@+id/buttonaccept"
		 	        android:layout_width="match_parent"
		 	        android:layout_height="wrap_content"
		 	        android:gravity="center"
		 	        android:textSize="20sp"
		 	        android:text="@string/buttonAccept"
		 	        android:padding="5dp"
		 	    	android:background="@drawable/button_large_accept" />
		 	    <View
			        android:layout_width="match_parent"
				    android:layout_height="2dp"
				    android:paddingLeft="5dp"
			    	android:paddingRight="5dp"
				    android:background="@color/button_underline_green" />
			</LinearLayout>
	 	</LinearLayout>    
	</RelativeLayout>
</ScrollView>