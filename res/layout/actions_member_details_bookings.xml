<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/member_actions_list"
    android:tag="single_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/memberActionsH"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/action"
        android:textIsSelectable="false"
        android:padding="5dp"
        android:paddingBottom="1dp"
        android:layout_marginLeft="2dp"/>
	<LinearLayout
        android:layout_width="215dp"
        android:layout_height="wrap_content"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="5dp"
    	android:orientation="vertical">
    	<LinearLayout 
		        android:id="@+id/button_add_booking"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:background="@drawable/button_large"
		        android:clickable="true" >
		        <ImageView
		            android:id="@+id/add_booking_drawable"
		            android:layout_width="50dp"
		            android:layout_height="50dp"
		            android:background="@drawable/ic_action_new_event"
		            android:padding="3dp" />
		        <TextView
		            android:id="@+id/add_booking_text"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:gravity="center"
		            android:textSize="18sp"
		            android:text="@string/action_add_booking"
		            android:padding="3dp" />
		    </LinearLayout>
	    <View
	        android:layout_width="match_parent"
		    android:layout_height="2dp"
		    android:paddingLeft="5dp"
	    	android:paddingRight="5dp"
		    android:background="@color/button_underline_grey" />
	</LinearLayout>
	
</LinearLayout>
