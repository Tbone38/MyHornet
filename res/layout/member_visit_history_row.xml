<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/booking_resource_background"
    tools:context=".MemberVisitHistory"
    android:orientation="horizontal" >
	<View
	    android:id="@+id/visit_history_colour_block"
	    android:layout_width="5dp"
	    android:layout_height="30dp"
	    android:background="@color/visitors_red"
	    android:visibility="visible"
	    android:layout_marginTop="2dp"
	    android:layout_marginBottom="2dp"/>
	
	<TextView 
	    android:id="@+id/visit_history_date"
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight=".8"
	    android:textSize="14sp"
	    android:gravity="left"
	    android:paddingLeft="5dp"
	    android:paddingTop="3dp"/>
	
	<TextView 
	    android:id="@+id/visit_history_time"
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight=".8"
	    android:textSize="14sp"
	    android:gravity="left"
	    android:paddingTop="3dp"/>
	
	<TextView
	    android:id="@+id/visit_history_programme"
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:textSize="14sp"
	    android:gravity="left"
	    android:paddingLeft="5dp"
	    android:paddingTop="3dp" />
	</LinearLayout>
