
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    android:id="@+id/pageLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="7dp"
    tools:context=".MemberDetails" >  
	
	<TextView
    	android:id="@+id/membernotesH"
    	android:textSize="24sp"
        android:text="@string/heading_member_notes"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:textIsSelectable="false"
        android:padding="5dp"
		android:paddingBottom="1dp" />
    <View
        android:id="@+id/membernotesHline"
		android:layout_width="wrap_content"
		android:layout_height="1dp"
		android:layout_below="@id/membernotesH"
		android:layout_alignLeft="@id/membernotesH"
		android:layout_alignRight="@id/membernotesH"
		android:background="@color/block_header_blue" />
	<LinearLayout
	    android:id="@+id/membernotes"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/membernotesHline"
	    android:orientation="vertical" >
	</LinearLayout>
	<TextView
    	android:id="@+id/membertasksH"
    	android:textSize="24sp"
        android:text="Tasks"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/membernotes"
        android:textIsSelectable="false"
        android:padding="5dp"
		android:paddingBottom="1dp" />
    <View
        android:id="@+id/membertasksHline"
		android:layout_width="wrap_content"
		android:layout_height="1dp"
		android:layout_below="@id/membertasksH"
		android:layout_alignLeft="@id/membertasksH"
		android:layout_alignRight="@id/membertasksH"
		android:background="@color/block_header_blue" />
	<LinearLayout
	    android:id="@+id/membertasks"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/membertasksHline"
	    android:orientation="vertical" >
	    
	</LinearLayout>
	
	<include 
	    layout="@layout/member_details_actions"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/membertasks"/>
</RelativeLayout>