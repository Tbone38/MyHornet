<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/text_cancel_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/android_blue"
        android:text="@string/membership_expire_date"
        android:padding="5dp"/>
    
    <TextView 
        android:id="@+id/text_cancel_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/membership_expire_reason"
        android:padding="5dp"/>
    
    <Spinner
        android:id="@+id/spinner_cancel_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/text_cancel_fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/membership_cancel_fee"
        android:padding="5dp" />
    
    <EditText 
        android:id="@+id/input_cancel_fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal" />
    
    <LinearLayout
        android:id="@+id/button_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"	>
        <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
		    android:layout_marginRight="10dp"
		    android:layout_marginBottom="5dp"
	    	android:orientation="vertical">
		        <TextView
		            android:id="@+id/button_cancel_text"
		            android:layout_width="match_parent"
		            android:layout_height="45dp"
		            android:gravity="center"
		            android:textSize="18sp"
		            android:text="@string/cancel"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"
		            android:clickable="true"
		        	android:background="@drawable/button_large_cancel" />
	        	<View
			        android:layout_width="match_parent"
				    android:layout_height="2dp"
				    android:paddingLeft="5dp"
			    	android:paddingRight="5dp"
				    android:background="@color/button_underline_red" />
		</LinearLayout>
        
        <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
		    android:layout_marginRight="10dp"
		    android:layout_marginBottom="5dp"
	    	android:orientation="vertical">
		        <TextView
		            android:id="@+id/button_accept"
		            android:layout_width="match_parent"
		            android:layout_height="45dp"
		            android:gravity="center"
		            android:textSize="18sp"
		            android:text="@string/button_ok"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"
		            android:clickable="true"
		        	android:background="@drawable/button_large_accept" />
	        	<View
			        android:layout_width="match_parent"
				    android:layout_height="2dp"
				    android:paddingLeft="5dp"
			    	android:paddingRight="5dp"
				    android:background="@color/button_underline_green" />
		</LinearLayout>
	</LinearLayout>        
</LinearLayout>
