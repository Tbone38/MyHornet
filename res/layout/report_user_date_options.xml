<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="5dp"
	    android:orientation="vertical"
	    android:baselineAligned="false" >
	

	    <ScrollView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	         >
	       <LinearLayout
	           	android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:layout_gravity="center_horizontal" 
			    android:orientation="vertical"
			    >
			<TextView
		       android:id="@+id/report_date_options_title"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:text="@string/report_date_options_title"
		       android:textSize="30sp"
		       android:textStyle="bold"
		       android:padding="20dp"
		       android:gravity="center_horizontal"       
			/>
		    <TextView
			       android:id="@+id/report_date_options_report_name"
			       android:layout_width="match_parent"
			       android:layout_height="wrap_content"
			       android:textSize="25sp"
			       android:textStyle="bold"
			       android:padding="20dp"
			       android:gravity="center_horizontal"       
			/>
			<LinearLayout
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:layout_gravity="center"
			    android:padding="7dp"
			    android:background="#7DDDF0"
			    android:orientation="vertical" >
			   <TextView
			       android:id="@+id/start_date_title"
			       android:layout_width="match_parent"
			       android:layout_height="wrap_content"
			       android:text="@string/start_date_title"
			       android:textSize="25sp"
			       android:textStyle="bold"
			       android:gravity="center"       
			    />
		        <DatePicker
		            android:id="@+id/start_date"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" />
		   </LinearLayout> 
		   <LinearLayout
			    android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_marginTop="20dp"
				android:background="#C4C416"
				android:layout_gravity="center"
			    android:padding="7dp"
			    android:orientation="vertical">
			    <TextView
			       android:id="@+id/end_date_title"
			       android:layout_width="match_parent"
			       android:layout_height="wrap_content"
			       android:text="@string/end_date_title"
			       android:textSize="25sp"
			       android:textStyle="bold"
			       android:gravity="center"	       
			       />
			    <DatePicker
			            android:id="@+id/end_date"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"/>
		   </LinearLayout>
		   <LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:padding="5dp"
				    android:layout_marginTop="30dp"
				    android:layout_marginBottom="30dp"
				    android:orientation="horizontal"
				    android:baselineAligned="false" >
		   	 <Button
			       android:id="@+id/btnCreateReport"
			       android:layout_width="wrap_content"
			       android:layout_gravity="right"
			       android:layout_weight="0.5"
			       android:background="#98FB98"
			       android:layout_marginLeft="30dp"
			       android:layout_marginRight="30dp"
			       android:layout_height="wrap_content"
			       android:textSize="20sp"
			       android:textStyle="bold"
			       android:text="@string/report_create_btn_title" />
		   	 	<Button
			       android:id="@+id/btnColumnOptions"
			       android:layout_width="wrap_content"
			       android:layout_gravity="left"
			       android:layout_weight="0.5"
			       android:background="#FACBC5"
			       android:layout_marginLeft="30dp"
			       android:layout_marginRight="30dp"
			       android:layout_height="wrap_content"
			       android:textSize="20sp"
			       android:textStyle="bold"
			       android:text="@string/report_btn_column_options" />
		   	 	</LinearLayout>
		 </LinearLayout>
	</ScrollView>
</LinearLayout>

