<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="5dp"
	    android:orientation="vertical"
	    android:baselineAligned="false" >
	

	    <ScrollView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	         >
	       <LinearLayout
	           	android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:orientation="vertical"
			    >
			<TextView
		       android:id="@+id/report_date_options_title"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:text="@string/report_date_options_title"
		       android:textSize="30sp"
		       android:textStyle="bold"
		       android:padding="20dp"
		       android:gravity="center"       
			/>
		    <TextView
			       android:id="@+id/report_date_options_report_name"
			       android:layout_width="match_parent"
			       android:layout_height="wrap_content"
			       android:textSize="30sp"
			       android:textStyle="bold"
			       android:padding="20dp"
			       android:gravity="center"       
			/>
			<LinearLayout
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:layout_gravity="center"
			    android:padding="7dp"
			    android:background="#7DDDF0"
			    android:orientation="vertical" >
			   <TextView
			       android:id="@+id/start_date_title"
			       android:layout_width="match_parent"
			       android:layout_height="wrap_content"
			       android:text="@string/start_date_title"
			       android:textSize="30sp"
			       android:textStyle="bold"
			       android:gravity="center"       
			    />
		        <DatePicker
		            android:id="@+id/start_date"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" />
		   </LinearLayout> 
		   <LinearLayout
			    android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:background="#C4C416"
				android:layout_gravity="center"
			    android:padding="7dp"
			    android:orientation="vertical">
			    <TextView
			       android:id="@+id/end_date_title"
			       android:layout_width="match_parent"
			       android:layout_height="wrap_content"
			       android:text="@string/end_date_title"
			       android:textSize="30sp"
			       android:textStyle="bold"
			       android:gravity="center"	       
			       />
			    <DatePicker
			            android:id="@+id/end_date"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"/>
		   </LinearLayout>
		 </LinearLayout>
	</ScrollView>
	</LinearLayout>

