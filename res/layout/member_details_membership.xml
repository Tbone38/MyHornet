<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    android:id="@+id/pageLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="7dp"
    tools:context=".MemberDetails" >  
	<TextView
    	android:id="@+id/memberinfoH"
    	android:textSize="24sp"
        android:text="@string/heading_member_details"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:textIsSelectable="false"
        android:padding="5dp"
        android:paddingBottom="1dp"
        android:layout_marginLeft="2dp"/>
	    
	<LinearLayout
	    android:id="@+id/member_ms_list"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/memberinfoH"
	    android:orientation="vertical" >
	    
	</LinearLayout>
	<TextView
	    android:id="@+id/memberHoldH"
	    android:textSize="24sp"
	    android:text="@string/heading_member_hold"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/member_ms_list"
	    android:textIsSelectable="false"
	    android:padding="5dp"
	    android:paddingBottom="1dp"
	    android:layout_marginLeft="2dp" />
	<LinearLayout
	    android:id="@+id/member_hold_list"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/memberHoldH"
	    android:orientation="vertical" >
	</LinearLayout>
	    
	<include 
	    layout="@layout/member_details_actions"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/member_hold_list"/>
</RelativeLayout>