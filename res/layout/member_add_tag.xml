<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/hint_add_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/member_hint_add_tag"
        android:textSize="14sp"
        android:padding="5dp" />
    <TextView
        android:id="@+id/label_add_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/member_add_tag"
        android:textSize="18sp"
        android:paddingLeft="6dp"
        />
    <TextView
    	android:id="@+id/tag_id"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:text="@string/member_no_card"
    	android:textColor="@color/red"
    	android:textSize="14sp"
    	android:paddingTop="3dp"
    	android:paddingLeft="10dp"
    	android:paddingBottom="5dp" />
    
    
    <LinearLayout
        android:id="@+id/button_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"	>
        <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
		    android:layout_marginRight="10dp"
		    android:layout_marginBottom="5dp"
	    	android:orientation="vertical">
		        <TextView
		            android:id="@+id/button_continue_text"
		            android:layout_width="match_parent"
		            android:layout_height="45dp"
		            android:gravity="center"
		            android:textSize="18sp"
		            android:text="@string/buttonContinue"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"
		            android:clickable="true"
		        	android:background="@drawable/button_large_accept" />
	        	<View
			        android:layout_width="match_parent"
				    android:layout_height="2dp"
				    android:paddingLeft="5dp"
			    	android:paddingRight="5dp"
				    android:background="@color/button_underline_green" />
		</LinearLayout>
		
		<LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
		    android:layout_marginRight="10dp"
		    android:layout_marginBottom="5dp"
	    	android:orientation="vertical">
		        <TextView
		            android:id="@+id/button_take_phone_text"
		            android:layout_width="match_parent"
		            android:layout_height="45dp"
		            android:gravity="center"
		            android:textSize="18sp"
		            android:text="@string/buttonAddPhoto"
		            android:paddingLeft="5dp"
		            android:paddingRight="5dp"
		            android:clickable="true"
		        	android:background="@drawable/button_large" />
	        	<View
			        android:layout_width="match_parent"
				    android:layout_height="2dp"
				    android:paddingLeft="5dp"
			    	android:paddingRight="5dp"
				    android:background="@color/button_underline_grey" />
		</LinearLayout>
    </LinearLayout>
</LinearLayout>
