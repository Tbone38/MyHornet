<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    android:id="@+id/pageLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="7dp"
    tools:context=".MemberDetails" >  
	<TextView
    	android:id="@+id/member_gallery_title"
    	android:textSize="24sp"
        android:text="@string/member_gallery_title"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:textIsSelectable="false"
        android:padding="5dp"
        android:paddingBottom="1dp"
        android:layout_marginLeft="2dp"/>
	<!-- <GridView
	    android:id="@+id/member_gallery"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/member_gallery_title" >
	</GridView> -->
	<GridView
	    android:id="@+id/member_gallery"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/member_gallery_title"
	    android:numColumns="auto_fit"
	    android:gravity="center"
	    android:stretchMode="columnWidth"
	    android:background="#FFFFFFFF"> 
	</GridView>
	<LinearLayout
	    android:id="@+id/button_row"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/member_gallery"
	    android:orientation="horizontal">
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
		    android:layout_marginRight="10dp"
	    	android:orientation="vertical">
		    <LinearLayout 
		        android:id="@+id/button_add_photo"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:padding="5dp"
		        android:background="@drawable/button_large"
		        android:clickable="true" >
		        <ImageView
		            android:id="@+id/add_photo_drawable"
		            android:layout_width="35dp"
		            android:layout_height="35dp"
		            android:background="@drawable/ic_action_camera"
		            android:padding="2dp" />
		        <TextView
		            android:id="@+id/add_photo_text"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:gravity="center"
		            android:textSize="18sp"
		            android:text="@string/button_gallery_add_photo"
		            android:padding="5dp" />
		    </LinearLayout>
		    <View
		        android:layout_width="match_parent"
			    android:layout_height="2dp"
			    android:paddingLeft="5dp"
		    	android:paddingRight="5dp"
			    android:background="@color/member_number_grey2" />
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>