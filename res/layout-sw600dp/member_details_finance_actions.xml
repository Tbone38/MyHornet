<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/member_actions_list"
    android:tag="single_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <TextView
        android:id="@+id/memberActionsH"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/action"
        android:textIsSelectable="false"
        android:padding="5dp"
        android:paddingBottom="1dp"
        android:layout_marginLeft="2dp"/>

    <LinearLayout
        android:id="@+id/button_row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/memberActionsH"
        android:layout_marginTop="5dp"
        android:baselineAligned="false"
        android:orientation="horizontal" >

		<LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight=".5"
		    android:layout_marginRight="10dp"
	    	android:orientation="vertical">
		    <LinearLayout
			    android:id="@+id/button_check_billing"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:background="@drawable/button_large"
			    android:clickable="true">
		        <ImageView
		            android:id="@+id/check_billing_drawable"
		            android:layout_width="50dp"
		            android:layout_height="50dp"
		            android:background="@drawable/ic_action_paste"
		            android:padding="3dp" />
			    <TextView 
			        android:id="@+id/button_billing_check_text"
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:gravity="center"
			        android:textSize="18sp"
			        android:text="@string/finance_check_billing"
			        android:padding="3dp"/>
			</LinearLayout>
		    <View
		        android:layout_width="match_parent"
			    android:layout_height="2dp"
			    android:paddingLeft="5dp"
		    	android:paddingRight="5dp"
			    android:background="@color/button_underline_grey" />
		</LinearLayout>
		<LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight=".5"
		    android:layout_marginRight="10dp"
	    	android:orientation="vertical">
		</LinearLayout>
   </LinearLayout>
   <LinearLayout
        android:id="@+id/button_row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_row_1"
        android:layout_marginTop="5dp"
        android:baselineAligned="false"
        android:orientation="horizontal" >
		<LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight=".5"
		    android:layout_marginRight="10dp"
	    	android:orientation="vertical">
		    <LinearLayout
		    android:id="@+id/button_show_billing"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:background="@drawable/button_large"
		    android:clickable="true">
		    <ImageView
	            android:id="@+id/show_billing_drawable"
	            android:layout_width="50dp"
	            android:layout_height="50dp"
	            android:background="@drawable/ic_action_event"
	            android:padding="3dp" />
	        <TextView 
		        android:id="@+id/button_billing_view_text"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="@string/finance_show_billing"
		        android:textSize="18sp"
				android:padding="3dp"
				android:gravity="center"/>
		</LinearLayout>
	    <View
	        android:layout_width="match_parent"
		    android:layout_height="2dp"
		    android:paddingLeft="5dp"
	    	android:paddingRight="5dp"
		    android:background="@color/button_underline_grey" />
		</LinearLayout>
		<LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight=".5"
		    android:layout_marginRight="10dp"
	    	android:orientation="vertical">
		    <LinearLayout
			    android:id="@+id/button_add_billing"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:background="@drawable/button_large"
			    android:clickable="true">
		        <ImageView
		            android:id="@+id/add_billing_drawable"
		            android:layout_width="50dp"
		            android:layout_height="50dp"
		            android:background="@drawable/ic_action_camera"
		            android:padding="3dp" />
				<TextView 
			        android:id="@+id/button_billing_add_text"
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:text="@string/finance_setup_billing"
			        android:textSize="18sp"
			        android:padding="3dp"
			        android:gravity="center"/>
			</LinearLayout>
	    	<View
		        android:layout_width="match_parent"
			    android:layout_height="2dp"
			    android:paddingLeft="5dp"
		    	android:paddingRight="5dp"
			    android:background="@color/button_underline_grey" />
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>
