<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/member_actions_list"
    android:tag="single_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <TextView
        android:id="@+id/memberActionsH"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/action"
        android:textIsSelectable="false"
        android:padding="5dp"
        android:paddingBottom="1dp"
        android:layout_marginLeft="2dp"/>    
	<LinearLayout
	    android:id="@+id/button_row_1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/memberActionsH"
	    android:orientation="horizontal"
	    android:baselineAligned="false" >
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight=".5"
		    android:layout_marginRight="10dp"
	    	android:orientation="vertical">
		    <LinearLayout
		        android:id="@+id/button_add_membership"
		        android:layout_width="match_parent"
			    android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:clickable="true"
		        android:background="@drawable/button_large" >
		        <ImageView
		            android:id="@+id/button_add_membership_drawable"
		            android:layout_width="50dp"
		            android:layout_height="50dp"
		            android:background="@drawable/ic_action_add_to_queue"
		            android:padding="3dp" />
		        <TextView
		            android:id="@+id/button_add_membership_text"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:gravity="center"
		            android:textSize="18sp"
		            android:text="@string/action_add_membership"
		            android:padding="3dp" />
		    </LinearLayout>
		    <View
		        android:layout_width="match_parent"
			    android:layout_height="2dp"
			    android:paddingLeft="5dp"
		    	android:paddingRight="5dp"
			    android:background="@color/button_underline_grey" />
		</LinearLayout>
		<LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight=".5"
		    android:layout_marginRight="10dp"
	    	android:orientation="vertical">
		    <LinearLayout 
		        android:id="@+id/button_hold"
		        android:layout_width="match_parent"
			    android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:clickable="true"
		        android:background="@drawable/button_large">
		        <ImageView
		            android:id="@+id/button_hold_drawable"
		            android:layout_width="50dp"
		            android:layout_height="50dp"
		            android:background="@drawable/ic_action_error"
		            android:padding="3dp" />
		        <TextView
		            android:id="@+id/button_hold_text"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:gravity="center"
		            android:textSize="18sp"
		            android:text="@string/action_hold"
		            android:padding="3dp" />
		    </LinearLayout>
		    <View
		        android:layout_width="match_parent"
			    android:layout_height="2dp"
			    android:paddingLeft="5dp"
		    	android:paddingRight="5dp"
			    android:background="@color/button_underline_grey" />
		</LinearLayout>
    </LinearLayout>
    <LinearLayout
	    android:id="@+id/button_row_2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/button_row_1"
	    android:layout_marginTop="5dp"
	    android:orientation="horizontal"
	    android:baselineAligned="false" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight=".5"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/button_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_large"
                android:clickable="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/button_tag_drawable"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_action_labels"
                    android:padding="3dp" />

                <TextView
                    android:id="@+id/button_tag_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/action_tag"
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/button_underline_grey"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
        </LinearLayout>

		<LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight=".5"
		    android:layout_marginRight="10dp"
	    	android:orientation="vertical">

		</LinearLayout>

   </LinearLayout>    
</RelativeLayout>
