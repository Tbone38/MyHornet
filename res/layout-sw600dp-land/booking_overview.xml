<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/booking_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false"
    tools:context=".DisplayResultsActivity" >
    <RelativeLayout
	    android:id="@+id/overview_list"
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight=".8" >
		<TextView 
	        android:id="@+id/booking_resource_resource_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="18sp"
	        android:textColor="@color/booking_resource_grey"
	        android:text="Facilities"
	        android:padding="3dp"/>
	    <!-- <ListView 
	        android:id="@android:id/list"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:layout_below="@id/booking_resource_resource_name">
	    </ListView> -->
	    <ScrollView 
	        android:id="@+id/booking_resource_list_scroll"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/booking_resource_resource_name">
	    <LinearLayout
	        android:id="@+id/booking_resource_list"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	        
	    </LinearLayout>
	    </ScrollView>
   	</RelativeLayout>
    <RelativeLayout 
        android:id="@+id/booking_overview_calendar_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".2" >
    </RelativeLayout>    
</LinearLayout>