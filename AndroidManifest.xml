<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.treshna.hornet"
    android:versionCode="119"
    android:versionName="0.19" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />
    
    <uses-feature android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature android:name="android.hardware.camera.any"
        android:required="false"/>
    <uses-feature android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature android:name="android.hardware.touchscreen"/>
    <uses-feature android:name="android.hardware.nfc"
        android:required="false"/>

    <uses-permission android:name="android.permission.NFC" />

    <!-- Keeps the processor from sleeping when a message is received. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.treshna.hornet" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <provider
            android:name="com.treshna.hornet.HornetContentProvider"
            android:authorities="com.treshna.hornet"
            android:exported="true" >
        </provider>

        <activity
            android:name="com.treshna.hornet.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/nfc_tech_filter" />
        </activity>
        <activity
            android:name="com.treshna.hornet.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>
        <activity
            android:name="com.treshna.hornet.CameraWrapper"
            android:label="@string/title_activity_camera_wrapper"
            android:parentActivityName="com.treshna.hornet.MainActivity"
            android:theme="@style/Theme.AppCompat.Light" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.treshna.hornet.MainActivity" />
        </activity>

        <service android:name="com.treshna.hornet.HornetDBService"
            android:process=":treshna" >
        </service>

        <activity
            android:name="com.treshna.hornet.MemberAdd"
            android:label="@string/title_activity_add_member"
            android:parentActivityName="com.treshna.hornet.MainActivity"
            android:theme="@style/Theme.AppCompat.Light" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.treshna.hornet.MainActivity" />
        </activity>
        <activity
            android:name="com.treshna.hornet.BookingPage"
            android:label="@string/title_activity_add_booking"
            android:parentActivityName="com.treshna.hornet.MainActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.treshna.hornet.MainActivity" />
        </activity>
        <activity
            android:name="com.treshna.hornet.ClassCreate"
            android:label="@string/title_activity_class_create"
            android:parentActivityName="com.treshna.hornet.MainActivity"
            android:theme="@style/Theme.AppCompat.Light" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.treshna.hornet.MainActivity" />
        </activity>
        <activity
            android:name="com.treshna.hornet.MembershipHold"
            android:label="@string/title_activity_membership_hold"
            android:parentActivityName="com.treshna.hornet.MainActivity"
            android:theme="@style/Theme.AppCompat.Light" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.treshna.hornet.MainActivity" />
        </activity>
        <activity
            android:name="com.treshna.hornet.EmptyActivity"
            android:label="@string/title_activity_membership_add"
            android:parentActivityName="com.treshna.hornet.MainActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.treshna.hornet.MainActivity" />
        </activity>
        <activity
            android:name="com.treshna.hornet.SetupActivity"
            android:label="@string/title_activity_magic" >
        </activity>
    </application>

</manifest>